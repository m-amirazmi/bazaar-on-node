<!DOCTYPE html>
<html lang="en">
  <%- include("partials/header") %>
  <body>
    <%- include("partials/navbar") %>
    <div class="container">
      <div class="row">
        <%- include("partials/home-category") %>
      </div>
      <div class="">
        <h4>Today's Menu</h4>
        <hr />
      </div>
      <div class="row">
        <% foods.forEach((food)=>{ %>
        <div class="col m4 s12">
          <div class="card hoverable">
            <a href="/foods/:id">
              <div class="card-image card-food-height">
                <img
                  src="<%= food.foodImage %>"
                  alt="<%= food.foodName %>"
                  class="activator"
                />
                <a
                  href="/cart"
                  class="btn-floating halfway-fab waves-effect waves-light green darken-1"
                  ><i class="material-icons">add</i></a
                >
              </div>
              <div class="card-content">
                <p class="flow-text"><%= food.foodName %></p>
                <p class="food-price-bold"><%= food.foodPrice %></p>
                <p class="truncate">
                  <%= food.foodDesc %>
                </p>
              </div>
            </a>
          </div>
        </div>

        <% }) %>
      </div>
    </div>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </body>
</html>
